<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="200dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="4">

        <Button
            android:id="@+id/button1"
            android:gravity="fill"
            android:onClick="onTranslate"
            android:tag="doyouspeakenglish"
            android:text="Do you speak english?"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:gravity="fill"
            android:onClick="onTranslate"
            android:tag="goodevening"
            android:text="Good evening"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:gravity="fill"
            android:onClick="onTranslate"
            android:tag="hello"
            android:text="Hello"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:gravity="fill"
            android:onClick="onTranslate"
            android:tag="ilivein"
            android:text="I live in"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:gravity="fill"
            android:onClick="onTranslate"
            android:tag="mynameis"
            android:text="My name is"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:gravity="fill"
            android:onClick="onTranslate"
            android:tag="please"
            android:text="Please"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:gravity="fill"
            android:onClick="onTranslate"
            android:tag="welcome"
            android:text="Welcome"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button8"
            android:gravity="fill"
            android:onClick="onTranslate"
            android:tag="howareyou"
            android:text="How are you?"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />


        <Button
            android:id="@+id/buttonGerman"
            android:layout_marginTop="250dp"
            android:onClick="onTranslate"
            android:text="German"
            app:layout_columnWeight="1" />

        <Button
            android:id="@+id/buttonFrench"
            android:layout_marginTop="250dp"
            android:onClick="onTranslate"
            android:text="Portugues            "
            app:layout_columnWeight="1" />


    </android.support.v7.widget.GridLayout>

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="353dp"
        android:layout_height="22dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />
</android.support.constraint.ConstraintLayout>
